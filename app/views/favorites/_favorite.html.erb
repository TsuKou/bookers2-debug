<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorite_path(book), method: :delete, remote: false, data: {"turbolinks" => false} do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <span style="color: red;"><%= book.favorites.count %></span>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorite_path(book), method: :post, remote: false, data: {"turbolinks" => false} do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>
